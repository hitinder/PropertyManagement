
@model IEnumerable<PropertyManagement.BusinessObjectLayer.ViewModels.PropertiesForLeaseViewModel>

<div class="row">
    <div class="col-md-12">
        <div class="box box-info " id="nopcommerce-news-box">
            <div class="box-header with-border clearfix">
                <div class="box-title2">
                    <div class="col-xl-4">
                        <strong>1: Select Year:</strong>
                        @Html.DropDownList("Year", (SelectList)ViewBag.Years, "", new { id = "ddlYears", @class = "form-control" })
                    </div>
                </div>
                <br />
                <div class="col-xl-12">
                    <strong>2: Select property:</strong>
                    <table class="table table-striped table-bordered" id="TblProperty">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Property Id</th>
                                <th>Address</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <label class="custom-control custom-checkbox">
                                            <input type="checkbox" class="custom-control-input" id="@item.PropertyId">
                                            <span class="custom-control-label"></span>
                                        </label>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PropertyId)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.PropertyAddress)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <div class="form-group">
                        <div class="col-md-12">
                            <span style="color:red;" id="spMessage">@ViewBag.ErrorMessage</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
