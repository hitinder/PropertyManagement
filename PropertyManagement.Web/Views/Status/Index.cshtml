@model IEnumerable<PropertyManagement.BusinessObjectLayer.ViewModels.StatusViewModel>

<link href="~/vendor/libs/datatables/dataTables.min.css" rel="stylesheet" />
<script src="~/vendor/libs/datatables/dataTables.min.js"></script>


<div class="row">
    <div class="col-md-12">
        <div class="box box-info " id="nopcommerce-news-box">
            <div class="box-header with-border clearfix">
                <div class="box-title">
                    <i class="fa fa-newspaper-o"></i>
                    Status Table
                </div>
                <div class="box-tools pull-right">
                    <a asp-action="AddEdit" class="btn btn-primary btn-sm" title="Add New">Add New</a>
                </div>
            </div>
            <div class="box-body">
                    <table class="table table-striped table-bordered" id="tblStatus">
                        <thead>
                            <tr>
                                <th>
                                    Status ID
                                </th>
                                <th>
                                    Status Type
                                </th>
                                <th>
                                    Status Name
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusType)
                                </td>
                                <td>
                                    <a href="Status/AddEdit?StatusID=@item.StatusId"> @Html.DisplayFor(modelItem => item.StatusName)</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
</div>


<script>
    $(function () {
        $('#tblStatus').DataTable(
            {
                pageLength: 25,
                responsive: true,
            });

        $("#tblStatus tbody tr").on('click', function (event) {
            $("#tblStatus tbody tr").removeClass('row_selected');
            $(this).addClass('row_selected');
        });
    });
    

</script>
