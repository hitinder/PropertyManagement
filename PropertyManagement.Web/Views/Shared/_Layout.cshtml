@{
    Layout = "_Application";
}
<!-- Layout wrapper -->
<div class="layout-wrapper layout-2">
    <div class="layout-inner">
        <!-- Layout sidenav -->
        @await Html.PartialAsync("Partials/_LayoutSidenav")
        <!-- Layout container -->
        <div class="layout-container">
            <!-- Layout navbar -->
            @await Html.PartialAsync("Partials/_LayoutNavbar")
            <!-- Layout content -->
            <div class="layout-content">
                <!-- Content -->
                <div class="container-fluid flex-grow-1 container-p-y">
                    @RenderBody()
                </div>
                <!-- / Content -->
                <!-- Layout footer -->
                @await Html.PartialAsync("Partials/_LayoutFooter")
            </div>
            <!-- Layout content -->
        </div>
        <!-- / Layout container -->
    </div>
    <!-- Overlay -->
    <div class="layout-overlay layout-sidenav-toggle"></div>
</div>
<!-- / Layout wrapper -->
@RenderSection("Scripts", required: false)