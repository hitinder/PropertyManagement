@model IEnumerable<PropertyManagement.BusinessObjectLayer.ViewModels.PropertyViewModel>
<link href="~/vendor/libs/datatables/datatables.min.css" rel="stylesheet" />
<script src="~/vendor/libs/datatables/datatables.min.js"></script>

<div class="row">
    <div class="col-md-12">
        <div class="box box-info " id="nopcommerce-news-box">
            <div class="box-header with-border clearfix">
                <div class="box-title">
                    <i class="fa fa-newspaper-o"></i>
                    List of Properties
                </div>
                <div class="box-tools pull-right">
                    <a asp-action="Create" class="btn btn-primary btn-sm" title="Add New" id="0"><i class="fa fa-plus"></i> Add New</a>
                </div>
            </div>
            <div class="box-body">
                <table class="table table-striped table-bordered" id="TblProperty">
                    <thead>
                        <tr>
                            <th>
                                Property ID
                            </th>
                            <th>
                                Property Type
                            </th>
                            <th>
                                Address
                            </th>
                            <th>
                                Unit Number
                            </th>
                            <th>
                                City
                            </th>
                            <th>
                                State
                            </th>
                            <th>
                                Zip Code
                            </th>
                            <th>
                                Status
                            </th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PropertyId)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PropertyTypeName)
                                </td>
                                <td>
                                    <a  href="/Property/TabView?PropertyId=@item.PropertyId&TabId=1" >@Html.DisplayFor(modelItem => item.Address)</a>
                                   
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.UnitNumber)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.City)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.State)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.ZipCode)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.StatusName)
                                </td>
                                <td>
                                    
                                    <a class="btn btn-coffe btn-xs" href="/Property/TabView?PropertyId=@item.PropertyId&TabId=2" ><i class="fa fa-edit"></i>  Repairs</a>
                                </td>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

